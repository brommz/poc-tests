@page "/time"
@inject IJSRuntime JsRunTime
@inject ISnackbar Snackbar

<PageTitle></PageTitle>

<MudText GutterBottom="true">CurrentTime: @CurrentTime</MudText>
<MudButton class="Color.Primary" @onclick="@GetCurrentTime">Get Current Time</MudButton>


@code {
    private MarkupString CurrentTime = new MarkupString("");

    async void GetCurrentTime()
    {
        var dateTime = await JsRunTime.InvokeAsync<string>("MyLib.GetCurrentTime");

        CurrentTime = new MarkupString(dateTime);

        StateHasChanged();
    }
}
